{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "node",
        "module": "esnext",
        "importHelpers": true,
        "esModuleInterop": true,
        "jsx": "react",
        "skipLibCheck": true,

        "baseUrl": "./src",
        "outDir": "../../dist/pruritus",
        "paths": {
            "@itch/*": ["../node_modules/kitch/src/*"],
            "@itch-modules/*": ["../node_modules/*"],
            "@pruritus/*": ["./*"],
            "@spitroast": ["../node_modules/spitroast/dist/types"]
        },

        "strict": true,
        "sourceMap": true
    }
}
